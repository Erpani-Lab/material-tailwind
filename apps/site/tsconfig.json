{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./public/*"],
      "@hooks": ["src/hooks/index.ts"],
      "@routes": ["src/routes.ts"],
      "@components": ["src/components/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
